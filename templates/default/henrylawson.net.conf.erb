<VirtualHost *:80>
	ServerName henrylawson.net
        ServerAlias www.henrylawson.net
 
	DocumentRoot /srv/http/henrylawson.net

        Redirect permanent / https://henrylawson.net/
</VirtualHost>

<VirtualHost _default_:443>
	ServerName henrylawson.net
	ServerAlias www.henrylawson.net

	ServerAdmin webmwaster@henrylawson.net
	DocumentRoot /srv/http/henrylawson.net

	SSLEngine on
        SSLProtocol all -SSLv2
        SSLCipherSuite ALL:!ADH:!EXPORT:!SSLv2:RC4+RSA:+HIGH:+MEDIUM

        SSLCertificateFile /srv/certs/henrylawson.net.crt
        SSLCertificateKeyFile /srv/certs/henrylawson.net.key
        SSLCertificateChainFile /srv/certs/sub.class1.server.ca.pem
        SSLCACertificateFile /srv/certs/startcom.root.ca.pem

	ErrorLog ${APACHE_LOG_DIR}/henrylawson.net-error.log
	CustomLog ${APACHE_LOG_DIR}/henrylawson.net-access.log combined
</VirtualHost>

